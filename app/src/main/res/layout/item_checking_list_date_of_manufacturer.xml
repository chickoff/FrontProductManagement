<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_recyclerview_background"
    android:padding="4dp"


    >

    <ImageView
        android:id="@+id/myImageView"
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:src="@drawable/ic_circle_24dp"

        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignLeft="@+id/myImageView"
        android:layout_alignTop="@+id/myImageView"
        android:layout_alignRight="@+id/myImageView"
        android:layout_alignBottom="@+id/myImageView"
        android:gravity="center"
        android:textSize="8dp"
        android:text="id"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/text_view_2"
        android:layout_height="24dp" android:layout_width="wrap_content"
        android:text="SKU"
        android:layout_toRightOf="@id/text_view_1"
        android:layout_marginLeft="15dp"
        android:gravity="center"


        />

    <TextView
        android:id="@+id/text_view_3"
        android:text="Длинное название товара здесь"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_2"
        android:textColor="#000"
        />


    <TextView
        android:id="@+id/text_view_4"
        android:hint="Не заполнено"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/text_view_3"
        android:textSize="26dp"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        />

</RelativeLayout>



