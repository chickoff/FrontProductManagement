<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:background="@drawable/item_recyclerview_background"
    >
    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="номер н/л"

        />
    <TextView
        android:id="@+id/text_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="поставщик"
        android:textColor="@color/item_recyclerview_textview_color"
        android:layout_below="@+id/text_view_1"
    />

    <ImageView
        android:id="@+id/image_view_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_summah"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_view_2"
        />

    <TextView
        android:id="@+id/text_view_3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Это сумма"
        android:layout_marginStart="10dp"
        android:textColor="@color/item_recyclerview_textview_color"
        android:layout_below="@+id/text_view_2"
        android:layout_toRightOf="@+id/image_view_1"

        />

    <ImageView
        android:id="@+id/image_view_2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_vat"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/text_view_2"
        android:layout_toRightOf="@+id/text_view_3"
        />

    <TextView
        android:id="@+id/text_view_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Это НДС"
        android:textColor="@color/item_recyclerview_textview_color"
        android:layout_marginStart="10dp"
    android:layout_below="@+id/text_view_2"
        android:layout_toRightOf="@+id/image_view_2"
        />

</RelativeLayout>


