<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".newdocumentmaster.extendinvoicemasters.creators.newinvoice.CreateNewInvoiceActivity"
    android:layout_height="match_parent"  android:layout_width="match_parent" android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/a_settings_textInputLayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/num_doc_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Номер накладной"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
    android:id="@+id/a_settings_textInputLayout_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"

    app:layout_constraintTop_toBottomOf="@+id/a_settings_textInputLayout_1">

    <EditText
        android:id="@+id/date_doc_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Дата накладной"
        android:inputType="date"
        android:foreground="#2196F3"
        />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/a_settings_textInputLayout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/a_settings_textInputLayout_2">



    <EditText
        android:id="@+id/division_textview"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:gravity="center"
        android:editable="false"
        android:hint="Подразделение"
         />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/cat_foot"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_settings_textInputLayout_3"
        android:src="@drawable/ic_cat_foot"/>

    <android.support.v7.widget.CardView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    >

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="OK"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:layout_weight="1"
android:layout_margin="1dp"

        android:gravity="center"
        />
    <TextView
        android:id="@+id/cancel_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Отмена"
        android:textColor="@color/font_color"
        android:layout_weight="1"
        android:gravity="center"
        />
</LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>


